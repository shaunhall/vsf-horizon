{
  "name": "@vue-storefront/horizon-api",
  "version": "0.0.1",
  "private": true,
  "sideEffects": false,
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./server": "./lib/index.server.js",
    "./package.json": "./package.json"
  },
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "yarn build:clear && yarn build:package && yarn build:server && yarn build:types",
    "build:clear": "rimraf lib",
    "build:package": "node ../../scripts/build --file=src/index.ts",
    "build:server": "node ../../scripts/build --file=src/index.server.ts",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "concurrently \"yarn build:package --watch\" \"yarn build:server --watch\"",
    "prepublish": "yarn build",
    "test": "jest",
    "update:check": "ncu",
    "update:update": "ncu -u",
    "gen": "graphql-code-generator --config ./codegen.yml"
  },
  "dependencies": {
    "@horizon-base-api/browser": "file:./base-api/prod/browser",
    "@horizon-base-api/node": "file:./base-api/prod/node",
    "@vue-storefront/core": "~2.5.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.4.11",
    "@graphql-codegen/typescript-operations": "^2.4.0",
    "concurrently": "^7.0.0",
    "graphql": "^16.5.0"
  },
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "access": "public"
  }
}
