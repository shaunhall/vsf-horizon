{
  "name": "@vue-storefront/horizon-api",
  "version": "0.0.1",
  "private": true,
  "sideEffects": false,
  "main": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js",
    "./server": "./lib/index.server.js",
    "./package.json": "./package.json"
  },
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "yarn build:clear && yarn build:package && yarn build:server && yarn build:types",
    "build:clear": "rimraf lib",
    "build:package": "node ../../scripts/build --file=src/index.ts",
    "build:server": "node ../../scripts/build --file=src/index.server.ts",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "concurrently \"yarn build:package --watch\" \"yarn build:server --watch\"",
    "prepublish": "yarn build",
    "test": "jest",
    "update:check": "ncu",
    "update:update": "ncu -u",
    "gen": "graphql-code-generator --config ./codegen.yml"
  },
  "dependencies": {
    "@apollo/client": "^3.6.5",
    "@vue-storefront/core": "~2.5.4",
    "cross-fetch": "^3.1.5"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.4.11",
    "@graphql-codegen/typescript-operations": "^2.4.0",
    "@types/graphql": "^14.5.0",
    "apollo": "^2.34.0",
    "babel-plugin-graphql-tag": "^3.3.0",
    "babel-plugin-import-graphql": "^2.8.1",
    "concurrently": "^7.0.0",
    "esbuild": "^0.14.39",
    "graphql-tag": "^2.12.6"
  },
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "access": "public"
  }
}
