{
  "compilerOptions": {
    "typeRoots": ["@types", "./node_modules/@types"],
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
